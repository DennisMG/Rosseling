@{
    PageData["title"] = "MiniTrello | Sign In";
}



<div class="container" ng-app="app.controllers">

    <div class="row" style="margin:100px" >
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <form role="form">
                <h2>Oh no! Forgot your password? <small>Please enter your email address. We will send you an email with instructions to reset your password.</small></h2>
                <hr class="colorgraph">


                <div class="form-group">
                    <input ng-model="changePasswordModel.Email" type="email" name="email" id="email" class="form-control input-lg" placeholder="Email Address" tabindex="4">
                </div>



                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-12 col-md-6"><input type="submit" ng-disabled="!(changePasswordModel.Email)" disabled value="Send Email" class="btn btn-primary btn-block btn-lg" tabindex="7" ng-click="sendEmail()"></div>
                    <div class="col-xs-12 col-md-6"><a href="./login" class="btn btn-success btn-block btn-lg">Sign In</a></div>
                    <div class="col-md-12">

                    </div>


                </div>


            </form>
        </div>
    </div>
    <!-- Modal -->
    
</div>

<div class="container">
    
</div>
