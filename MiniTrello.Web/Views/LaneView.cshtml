@{
    PageData["title"] = "Lanes";
}

<form class="form-inline" role="form" ng-app="app.controllers">
    <div class="form-group">
        <label class="sr-only" for="exampleInputEmail2">Email address</label>
        <input ng-model="NewLaneModel.Name" type="text" class="form-control" id="name" placeholder="Name">
    </div>
   <button type="submit" class="btn btn-default" ng-click="createLane()">Add new lane</button>
</form>
    <br>
<div class="row" ng-app="app.controllers">


    <div class="container">

        <div class="col-md-4" ng-repeat="lane in lanes">

            <div class="panel panel-default" id="accordion">
                <div class="panel-heading">
                    <form class="form-inline" role="form" ng-app="app.controllers">
                        <div class="form-group">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                                <h3 class="panel-title">
                                    {{lane.Name}}
                                </h3>
                            </a>
                            
                        </div>
                        <button type="submit" class="btn btn-default right"  ng-click="">Add Card</button>
                        <button type="submit" class="btn btn-default right" ng-click="">Erase Lane</button>
                    </form>
                </div>
                <ul class="list-group" ng-repeat="card in lane.Cards">
                    <a href="#" class="list-group-item">{{card.Content}}</a>
                    
                </ul>
            </div>
        </div>


    </div>

</div>
