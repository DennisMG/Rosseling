@{
    PageData["title"] = "Boards";
}
<form class="form-inline" role="form" ng-app="app.controllers">
    <div class="form-group">
        
        <input ng-model="NewBoardModel.Title" type="text" class="form-control" id="name" placeholder="Name">
    </div>
    <button type="submit" class="btn btn-default" ng-click="CreateBoard()">Add new board</button>
</form>
<br>

<div class="container" ng-app="app.controllers">
    <div class="row" >
        <div class="col-md-6" ng-repeat="board in boards">
            <div class="well well-sm">
                <div class="row">
                    <div class="col-xs-3 col-md-3 text-center">
                        <img src="https://31.media.tumblr.com/661318a78a6ce4f41a36e78c1ce80a68/tumblr_n2won5KKuX1tsoh37o1_500.jpg" alt="bootsnipp"
                             class="img-rounded img-responsive" />
                    </div>
                    <div class="col-xs-9 col-md-9 section-box">
                        <a href="/lane/{{board.Id}}">
                            <h2>
                                {{board.Title}}
                            </h2>
                        </a>

                        <button type="button" class="btn btn-labeled btn-danger">
                            <span class="btn-label"><i class="glyphicon glyphicon-trash"></i></span>Trash
                        </button>


                        <div class="row rating-desc">
                            <div class="col-md-12">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
