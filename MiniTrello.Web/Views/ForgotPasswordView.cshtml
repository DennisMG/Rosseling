@{
    PageData["title"] = "Reset Password";
}



<div class="container" ng-app="app.controllers">

    <div class="row" style="margin:100px">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <form role="form">
                <h2>Thank God you can reset your Password!<small>Please enter your Password and the Password Confirmation.</small></h2>
                <hr class="colorgraph">


                <div class="form-group">
                    <input ng-model="AccountForgotPasswordModel.NewPassword" type="password" name="password" id="password" class="form-control input-lg" placeholder="New Password" tabindex="4">
                    <input ng-model="AccountForgotPasswordModel.ConfirmNewPassword" type="password" name="confirmpassword" id="confirmpassword" class="form-control input-lg" placeholder="Confirm New Password" tabindex="4">
                </div>



                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-12 col-md-6"><input type="submit" ng-disabled="!(AccountForgotPasswordModel.NewPassword && AccountForgotPasswordModel.ConfirmNewPassword)" disabled value="Reset" class="btn btn-primary btn-block btn-lg" tabindex="7" ng-click="forgotpassword()"></div>
                    <div class="col-xs-12 col-md-6"><a href="./" class="btn btn-success btn-block btn-lg">Sign In</a></div>
                    <div class="col-md-12">

                    </div>


                </div>


            </form>
        </div>
    </div>
    <!-- Modal -->

</div>


